  <script>
    $('#dataTable').on('click', '.button-update', function() {
      let id = $(this).data('id');
      let jumlah_iuran = $(this).data('jumlah_iuran');
      let tanggal = $(this).data('tanggal');
      let keterangan = $(this).data('keterangan');

      $('#edit-modal').modal('show');
      $('.id').val(id);
      $('.jumlah_iuran').val(jumlah_iuran);
      $('.tanggal').val(tanggal);
      $('.keterangan').val(keterangan);
    })

    $('#dataTablePengeluaran').on('click', '.button-update', function() {
      let id = $(this).data('id');
      let jumlah_pengeluaran = $(this).data('jumlah_pengeluaran');
      let tanggal = $(this).data('tanggal');
      let keterangan = $(this).data('keterangan');

      $('#edit-modal-pengeluaran').modal('show');
      $('.id').val(id);
      $('.jumlah_pengeluaran').val(jumlah_pengeluaran);
      $('.tanggal').val(tanggal);
      $('.keterangan').val(keterangan);
    })
  </script>