<!-- Main content -->
<div class="content">
    <div class="container-fluid">
      <div class="row">
          <div class="col-md-8">
              <div class="card card-primary card-outline">
                <div class="card-header">
                    <button class="btn btn-primary" data-toggle="modal" data-target="#add-modal"><i class="nav-icon fas fa-plus"></i> Tambah</button>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped" id="dataTable">
                        <thead>
                        <tr>
                          <th>No.</th>
                          <th>Jabatan</th>
                          <th>Pendidikan</th>
                          <th>Gaji</th>
                          <th>Aksi</th>
                        </tr>
                        </thead>
                        <tbody>
                          <% for (let i = 0; i < jabatan.length; i++) { %> 
                        <tr>
                          <td><%= i + 1 %></td>
                          <td><%= jabatan[i].jabatan %></td>
                          <td><%= jabatan[i].pendidikan %></td>
                          <td>Rp. <%= jabatan[i].gaji %></td>
                          <td>
                              <a href="javascript:void()" type="button" class="btn btn-info button-update m-1"
                                data-id="<%= jabatan[i].id %>"
                                data-jabatan="<%= jabatan[i].jabatan %>"
                                data-pendidikan="<%= jabatan[i].pendidikan %>"
                                data-gaji="<%= jabatan[i].gaji %>"
                              ><i class="nav-icon fas fa-pencil-alt"></i> </a>
                              <button class="btn btn-danger m-1" data-toggle="modal" data-target="#delete_modal<%= jabatan[i].id %>"><i class="nav-icon fas fa-trash"></i> </button>
                            
                              <!-- Modal Hapus -->
                              <div class="modal fade" id="delete_modal<%= jabatan[i].id %>" tabindex="-1" role="dialog" aria-labelledby="delete_modalTitle" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="delete_modalTitle">Hapus Data Jabatan ?</h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                      </button>
                                    </div>
                                    <div class="modal-body">
                                      Data yang sudah di hapus tidak dapat dikembalikan lagi.
                                    </div>
                                    <div class="modal-footer">
                                    <form action="/admin/jabatan/<%= jabatan[i].id %>?_method=DELETE" method="POST">
                                      <button type="submit" class="btn btn-danger">Hapus</button>
                                    </form>
                                    </div>
                                  </div>
                                </div>
                              </div>

                          </td>
                        </tr>
                        <% } %> 
                        </tbody>
                    </table>
                </div>
              </div>
          </div>
        </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content -->