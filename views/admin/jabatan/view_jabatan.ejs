  <script>
    $('#dataTable').on('click', '.button-update', function() {
      let id = $(this).data('id');
      let jabatan = $(this).data('jabatan');
      let pendidikan = $(this).data('pendidikan');
      let gaji = $(this).data('gaji');

      $('#edit-modal').modal('show');
      $('.id').val(id);
      $('.jabatan').val(jabatan);
      $('.pendidikan').val(pendidikan);
      $('.gaji').val(gaji);
    })
  </script>