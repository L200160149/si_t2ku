<!-- Modal -->
<div class="modal fade" id="edit-suratkeluar-modal" tabindex="-1" role="dialog" aria-labelledby="edit-suratkeluar-modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="edit-suratkeluar-modal">Ubah Data Surat Keluar</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/admin/suratkeluar?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
            <div class="form-group">
                <label for="judul">Judul <span class="text-danger">*</span></label>
                <input type="text" class="form-control judul" name="judul" id="judul">
            </div>
            <div class="form-group">
                <label for="tanggal">Tanggal <span class="text-danger">*</span></label>
                <input type="date" class="form-control tanggal" name="tanggal" id="tanggal">
            </div>
            <div class="form-group">
                <label for="surat_keluar">Surat Keluar <span class="text-danger">*</span></label>
                <input type="file" class="form-control surat_keluar" name="surat_keluar" id="surat_keluar">
            </div>
        </div>
        <div class="modal-footer">
            <input type="hidden" class="id" name="id">
          <button type="submit" class="btn btn-primary">Ubah</button>
        </div>
        </form>
      </div>
    </div>
  </div>